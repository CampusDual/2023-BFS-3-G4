<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="tuser"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>user_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>user_</Column>
    </UpdateKeys>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="id_town"
                                 prefix="tu" />
                <AmbiguousColumn name="id_town" prefix="t" />
            </AmbiguousColumns>
            <ValidColumns>
                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>nif</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>
                <Column>phonenumber</Column>
                <Column>description</Column>
                <Column>id_town</Column>
                <Column>host</Column>
                <Column>town_name</Column>
                <Column>avatar</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.tuser tu
                    LEFT JOIN public.towns t on
						tu.id_town = t.id_town
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="login">
            <ValidColumns>
                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>nif</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>
                <Column>phonenumber</Column>
                <Column>description</Column>
                <Column>id_town</Column>
                <Column>host</Column>
                <Column>avatar</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.tuser
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>