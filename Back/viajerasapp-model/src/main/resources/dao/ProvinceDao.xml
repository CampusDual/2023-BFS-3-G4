<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog=""  table="provinces" datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>id_province</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id_province</Column>
    </UpdateKeys>
    <GeneratedKey>id_province</GeneratedKey>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="id_community"
                                 prefix="c" />
                <AmbiguousColumn name="id_community"
                                 prefix="p" />
                <AmbiguousColumn name="id_province"
                                 prefix="t" />
                <AmbiguousColumn name="id_province"
                                 prefix="p" />
            </AmbiguousColumns>
            <ValidColumns>
                <Column>province_name</Column>
                <Column>community_name</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
					SELECT
						#COLUMNS#
					FROM
						public.provinces p
					LEFT JOIN public.communities c on
						p.id_community = c.id_community
					LEFT JOIN public.towns t on
						t.id_province = p.id_province
					#WHERE#
					#ORDER#
		         ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
